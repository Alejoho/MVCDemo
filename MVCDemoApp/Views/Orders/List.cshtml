@model OrderListModel
@{
    ViewData["Title"] = "Orders List";
}

<h1>List of Orders</h1>

<table class="table table-striped">
    <caption class="visually-hidden">List of Orders</caption>
    <thead class="bg-dark text-white">
    @{
        var o = Model.Orders.FirstOrDefault();
        var f = Model.Foods.FirstOrDefault();
    }
    <tr>
        <th scope="col">@Html.DisplayNameFor(m => o.OrderedBy)</th>
        <th scope="col">@Html.DisplayNameFor(m => o.Date)</th>
        <th scope="col">@Html.DisplayNameFor(m => f.Title)</th>
        <th scope="col">@Html.DisplayNameFor(m => f.Price)</th>
        <th scope="col">@Html.DisplayNameFor(m => o.Quantity)</th>
        <th scope="col">@Html.DisplayNameFor(m => o.Total)</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.OrderedBy</td>
            <td>@order.Date</td>
            <td>@Model.Foods.FirstOrDefault(f => f.Id == order.FoodId)?.Title</td>
            <td>@Model.Foods.FirstOrDefault(f => f.Id == order.FoodId)?.Price.ToString("C")</td>
            <td>@order.Quantity</td>
            <td>@order.Total.ToString("C")</td>
            <td>
                <a asp-action="Display" asp-route-id="@order.Id"
                   class="btn btn-primary">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>